@using Web.Areas.Admin.ViewModels.UserManagement.UserActivation
@model UserActivationDetailsViewModel

@{
    ViewData["Title"] = "User activations";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="useractivation" asp-action="list" asp-area="admin">User activations</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
            <h4 class="page-title">User activation details</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>

@await Component.InvokeAsync("ActionResultMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="invalid-feedback" style="display:block"></div>
                </div>

                <div class="row">
                    <div class="card-body border mb-3">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-check form-switch form-switch-success">
                                        <input asp-for="MailSent" disabled class="form-check-input">
                                        <label asp-for="MailSent" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <div class="col-md-12">
                        <div class="mb-3">
                            <label asp-for="ActivationLink"></label>
                            <input readonly class="form-control" asp-for="ActivationLink">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UserFullName"></label>
                            <input readonly class="form-control" asp-for="UserFullName">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UserEmail"></label>
                            <input readonly class="form-control" asp-for="UserEmail">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CreatedAt"></label>
                            <input readonly class="form-control" asp-for="CreatedAt">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="UpdatedAt"></label>
                            <input readonly class="form-control" asp-for="UpdatedAt">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




