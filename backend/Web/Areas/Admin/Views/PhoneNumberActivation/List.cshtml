@using Web.Areas.Admin.ViewModels.UserManagement.PhoneNumberActivation
@model PhoneNumberActivationListViewModel

@{
    ViewData["Title"] = "Phone number activations";
}


<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Phone number activations</h4>
        </div>
        <!--end page-title-box-->
    </div>
    <!--end col-->
</div>

@await Component.InvokeAsync("ActionResultMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="phonenumberactivation-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.PhoneNumberActivations.GetEnumerator().Current.UserEmail)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.PhoneNumberActivations.GetEnumerator().Current.OTP)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.PhoneNumberActivations.GetEnumerator().Current.SMSSent)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.PhoneNumberActivations.GetEnumerator().Current.ExpireDate)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.PhoneNumberActivations.GetEnumerator().Current.SendAgainDate)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var phoneNumberActivation in Model.PhoneNumberActivations)
                                {
                                    rowCounter++;

                                    <tr>
                                        <td>
                                            @rowCounter
                                        </td>
                                        <td>@phoneNumberActivation.UserEmail</td>
                                        <td>@phoneNumberActivation.OTP</td>
                                        <td>@await Component.InvokeAsync("BooleanResult", new { result = phoneNumberActivation.SMSSent })</td>
                                        <td>@phoneNumberActivation.ExpireDate.ToString("o")</td>
                                        <td>@phoneNumberActivation.SendAgainDate.ToString("o")</td>
                                        <td>
                                            <a asp-controller="phonenumberactivation" asp-action="details" asp-area="admin" asp-route-id="@phoneNumberActivation.Id"><i class="fas fa-external-link-square-alt text-secondary font-18"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>
