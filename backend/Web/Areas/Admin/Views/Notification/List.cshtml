@using Web.Areas.Admin.ViewModels.CoreManagement.Notification
@model NotificationListViewModel

@{
    ViewData["Title"] = "Notifications";
}


<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Notifications</h4>
        </div>
        <!--end page-title-box-->
    </div>
    <!--end col-->
</div>

@await Component.InvokeAsync("ActionResultMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="users-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Notifications.GetEnumerator().Current.NotifyEvent.Label)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Notifications.GetEnumerator().Current.User.Email)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Notifications.GetEnumerator().Current.CreatedAt)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var notification in Model.Notifications)
                                {
                                    rowCounter++;

                                    <tr>
                                        <td>
                                            @rowCounter
                                        </td>
                                        <td>@notification.NotifyEvent.Label</td>
                                        <td>@notification.User.Email</td>
                                        <td>@notification.CreatedAt</td>
                                        <td>
                                            <a asp-controller="notification" asp-action="details" asp-area="admin" asp-route-id="@notification.Id"><i class="fas fa-external-link-square-alt text-secondary font-18"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>
