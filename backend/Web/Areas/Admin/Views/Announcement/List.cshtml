@using Web.Areas.Admin.ViewModels.ComponentManagement.Announcement
@model AnnouncementListViewModel

@{
    ViewData["Title"] = "Announcements";
}


<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Announcements</h4>
        </div>
        <!--end page-title-box-->
    </div>
    <!--end col-->
</div>

@await Component.InvokeAsync("ActionResultMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row justify-content-between">
                    <div class="col-2">
                        <a asp-controller="announcement" asp-action="create" asp-area="admin" type="button" class="btn btn-primary">
                            Create announcement
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="users-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Announcements.GetEnumerator().Current.Email)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Announcements.GetEnumerator().Current.Title)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Announcements.GetEnumerator().Current.Description)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Announcements.GetEnumerator().Current.Status)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Announcements.GetEnumerator().Current.CreatedAt)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var announcement in Model.Announcements)
                                {
                                    rowCounter++;

                                    <tr>
                                        <td>
                                            @rowCounter
                                        </td>
                                        <td>@announcement.Email</td>
                                        <td>@announcement.Title</td>
                                        <td>@announcement.Description.Substring(0, Math.Min(50, announcement.Description.Length))</td>
                                        <td>@announcement.Status</td>
                                        <td>@announcement.CreatedAt</td>
                                        <td>
                                            <a asp-controller="announcement" asp-action="update" asp-area="admin" asp-route-id="@announcement.Id" class="mr-2"><i class="las la-pen text-secondary font-18"></i></a>
                                            <a asp-controller="announcement" asp-action="details" asp-area="admin" asp-route-id="@announcement.Id"><i class="fas fa-external-link-square-alt text-secondary font-18"></i></a>
                                            <a asp-controller="announcement" asp-action="delete" asp-area="admin" asp-route-id="@announcement.Id" onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="las la-trash-alt text-danger font-22"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>
