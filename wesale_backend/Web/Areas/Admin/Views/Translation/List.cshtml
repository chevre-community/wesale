@using Web.Areas.Admin.ViewModels.CoreManagement.Translation
@using Microsoft.AspNetCore.Authorization

@model TranslationListViewModel

@{
    ViewData["Title"] = "Translations";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Translations</h4>
        </div>
        <!--end page-title-box-->
    </div>
    <!--end col-->
</div>

@await Component.InvokeAsync("ActionResultMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row justify-content-between">
                    <div class="col-3">
                        <div class="hide-phone app-search">
                            <form id="search-form" asp-route="admin-user-search" method="GET">
                                @Html.TextBox("q", "", new { @class = "form-control top-search", @type = "search", @placeholder = "Type text..." })
                                <button type="submit"><i class="ti ti-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="users-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Translations.GetEnumerator().Current.ContentKey)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Translations.GetEnumerator().Current.RelatedPage)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Translations.GetEnumerator().Current.Content_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Translations.GetEnumerator().Current.Content_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Translations.GetEnumerator().Current.Content_EN)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var translation in Model.Translations)
                                {
                                    rowCounter++;

                                    <tr>
                                        <td>
                                            @rowCounter
                                        </td>
                                        <td>@translation.ContentKey</td>
                                        <td>@translation.RelatedPage</td>
                                        <td>@translation.Content_AZ</td>
                                        <td>@translation.Content_RU</td>
                                        <td>@translation.Content_EN</td>
                                        <td>
                                            <a asp-controller="translation" asp-action="update" asp-area="admin" asp-route-id="@translation.Id" class="mr-2"><i class="las la-pen text-secondary font-18"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>
